@model IEnumerable<Person>

@{
    ViewBag.Title = "MVC.Grid default filter method";
}

<div class="widget example">
    <div class="widget-header">
        <div class="fa fa-bars"></div>
        <span>Filterable grid</span>
    </div>
    <div class="widget-content">
        @(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Name).UsingDefaultFilterMethod("equals");
                columns.Add(model => model.Surname).UsingDefaultFilterMethod("contains");
                columns.Add(model => model.MaritalStatus);

                columns.Add(model => model.Age).UsingDefaultFilterMethod("less-than-or-equal");
                columns.Add(model => model.Birthday).Formatted("{0:d}");
                columns.Add(model => model.IsWorking);
            })
            .Empty("No data found")
            .Filterable()
        )
    </div>
</div>

<div class="widget code">
    <div class="widget-header">
        <div class="fa fa-code"></div>
        <span>View</span>
    </div>
