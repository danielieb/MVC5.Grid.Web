@model IQueryable<Person>

@{
    ViewBag.Title = "MVC.Grid multi value filtering";
}

<div class="widget example">
    <div class="widget-header">
        <div class="fa fa-bars"></div>
        <span>Multi filtering grid values</span>
    </div>
    <div class="widget-content">
        @(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Name);
                columns.Add(model => model.Surname).Filterable(false);
                columns.Add(model => model.MaritalStatus).Filterable(GridFilterType.Multi);

                columns.Add(model => model.Age);
                columns.Add(model => model.Birthday).Formatted("{0:d}");
                columns.Add(model => model.IsWorking).Filterable(false);
            })
            .Filterable(GridFilterType.Double)
            .Empty("No data found")
        )
    </div>
</div>

<div class="widget code">
    <div class="widget-header">
        <div class="fa fa-code"></div>
        <span>View</span>
    </div>
    <div class="widget-content">
