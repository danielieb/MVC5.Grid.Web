@model IEnumerable<Person>

@{
    ViewBag.Title = "MVC.Grid multi value filtering";
}

<div class="widget example">
    <div class="widget-header">
        <div class="fa fa-bars"></div>
        <span>Multi filtering grid values</span>
        <div class="widget-buttons">
            <span class="fa fa-minus content-toggle"></span>
        </div>
    </div>
    <div class="widget-content">
        @(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Name).Titled("Name");
                columns.Add(model => model.Surname).Titled("Surname").MultiFilterable(false);
                columns.Add(model => model.MaritalStatus).Titled("Marital status");

                columns.Add(model => model.Age).Titled("Age");
                columns.Add(model => model.Birthday).Titled("Birth date").Formatted("{0:d}");
                columns.Add(model => model.IsWorking).Titled("Employed").MultiFilterable(false);
            })
            .Empty("No data found")
            .MultiFilterable()
            .Filterable()
        )
    </div>
</div>

<div class="widget code">
